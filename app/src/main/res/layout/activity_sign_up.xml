<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wattary.com.wattary.SignUp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/WattaryView"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/wattary"
            />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:id="@+id/EditTextLayout"
    android:layout_below="@id/WattaryView"
    >


    <EditText
        android:id="@+id/FristNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="textPersonName"
        android:layout_margin="15dp"
        android:hint="Frist Name"
        />

    <EditText
        android:id="@+id/LastNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="textPersonName"
        android:layout_margin="15dp"
        android:hint="Last Name" />

</LinearLayout>

<LinearLayout

    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_below="@id/EditTextLayout"

    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/CameraViewSignUp"
        android:layout_width="150dp"
        android:layout_height="155dp"
        android:padding="5dp"
        android:layout_marginLeft="40dp"
        >

    </FrameLayout>
    <Button
        android:id="@+id/CaptuerSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Captuer"
        android:onClick="CaptuerSignUpOnClick"
        />



</LinearLayout>



</RelativeLayout>
